<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <%- include('./partials/header.ejs') %> 
        <link rel="stylesheet" href="/styles/signup.css" >
        <title>Signup</title>
    </head>
    <body id="demo" class="mt-3">

        <div class="container d-flex justify-content-center align-items-center vh-60 ">
            <div class="form-container col-md-6 col-lg-5">
                <h2 class="text-center mb-4">Signup</h2>
                <form action="/signup" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="name-container">
                            <input type="text" class="form-control" name="firstName" placeholder="First Name" required>
                            <input type="text" class="form-control" name="lastName" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="username" placeholder="Username" required>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="emailId" placeholder="Email Id" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" min="18" max="150" name="age" placeholder="Age" required>
                    </div>
                    <div class="form-group">
                        <label style="font-size: medium; font-weight: 300;">Gender:</label>
                        <div class="radio-item">
                            <input type="radio" name="gender" value="male">
                            <label>Male</label>
                        </div>
                        <div class="radio-item">
                            <input type="radio" name="gender" value="female">
                            <label>Female</label>
                        </div>
                        <div class="radio-item">
                            <input type="radio" name="gender" value="other">
                            <label>Other</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Avatar:</label>
                        <input type="file" name="avatar" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Profile Image:</label>
                        <input type="file" name="coverImage" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="about" placeholder="Write about yourself">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Signup</button>
                    </div>
                </form>

                <form action="/login" method="GET">
                    <div id="switch" class=" fs-5 mb-2 ">Existing User ?</div>
                    <button type="submit" class="btn btn-primary w-100">Login Now</button>
                </form>
            </div>
        </div>

        <%- include('./partials/script.ejs') %> 
    </body>
</html>